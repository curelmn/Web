<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false"><!--没点击按钮的时候-->
        <shape android:shape="rectangle"><!--按钮形状-->
            <solid android:color="@color/bg_tab" /><!--按钮背景填充色-->
            <stroke
                android:width="1dp"
                android:color="@color/bg_tab_selected" /><!--按钮边框-->
        <padding android:top="1px"/>
        </shape>
    </item>

    <!--当点击按钮的时候变为蓝色-->
    <item>
        <shape android:shape="rectangle">  <!--按钮形状-->
        <solid android:color="@color/goldenrod" /><!--按钮背景填充色-->
        <stroke
            android:width="1dp"
            android:color="@color/colorPrimary" /><!--按钮边框-->
        <padding android:top="1px"/>
        </shape>
    </item>
</selector>