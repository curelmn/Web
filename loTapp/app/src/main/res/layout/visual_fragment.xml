<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp">


        <Button
            android:id="@+id/btn_agree_visual"
            android:layout_width="165dp"
            android:layout_height="75dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            android:background="#00cc00"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="同意接听"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn_refuse_visual"
            android:layout_width="165dp"
            android:layout_height="75dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:background="#ff45"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="拒绝接听"
            android:textColor="#000000" />

    </LinearLayout>




    <Button
        android:id="@+id/btn_menwei_visual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="#4100FFEA"
        android:text="连接门卫室" />

    <Button
        android:id="@+id/btn_wuye_visual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="#4100FFEA"
        android:text="连接物业" />

    <Button
        android:id="@+id/btn_zhiban_visual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="#4100FFEA"
        android:text="连接值班室" />



</LinearLayout>
