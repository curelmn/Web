<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/air_dpxs"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:src="@drawable/dp_dark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
    <Button
        android:id="@+id/btn_open_air"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:text="打开空调"/>

    <Button
        android:id="@+id/btn_close_air"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/shape"
        android:text="关闭空调" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
    <Button
        android:id="@+id/time_select_openair"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape"
        android:layout_marginLeft="30dp"
        android:text="定时开启"/>

    <Button
        android:id="@+id/time_select_closeair"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape"
        android:layout_marginLeft="30dp"
        android:text="定时关闭"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txt_time_openair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_time_closeair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>